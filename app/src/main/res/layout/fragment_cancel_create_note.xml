<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="@dimen/default_fragment_margin">

    <TextView
        style="@style/DialogTitleStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cancel_new_note"/>

    <TextView
        style="@style/DialogTextStyle"
        android:layout_marginTop="@dimen/dialog_vertical_spacing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/your_new_note_will_not_be_saved" />

    <Button
        style="@style/PrimaryButton"
        android:id="@+id/cancelBtn"
        android:layout_marginTop="@dimen/dialog_vertical_spacing"
        android:text="@string/discard_changes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>