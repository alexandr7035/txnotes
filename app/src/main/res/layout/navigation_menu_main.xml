<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:fillViewport="true">

<LinearLayout
    android:id="@+id/navigationMenu"
    android:layout_width="@dimen/navigationMenuWith"
    android:layout_height="match_parent"
    android:background="@color/colorNavigationMenu"
    android:orientation="vertical">

    <!-- The header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/menuHeader"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/colorNavigationMenuHeader">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="@string/menu_header_text"
            android:textColor="@color/colorNavigationMenuHeaderText"
            android:textSize="@dimen/navigationMenuHeaderText"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.09"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/headerVersionField"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_horizontal|left|center_vertical"
            android:textColor="@color/colorNavigationMenuHeaderVersionField"
            android:textSize="@dimen/navigationMenuVersionText"
            android:textStyle="bold|italic"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toEndOf="@+id/textView" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Menu items list -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorNavigationMenuBody"
        android:orientation="vertical"
        android:padding="10dp">


        <com.alexandr7035.txnotes.views.NavigationMenuItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_text="@string/menu_export_to_txt"
            app:item_icon="@drawable/txt"/>

        <com.alexandr7035.txnotes.views.NavigationMenuItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_text="@string/menu_trash_can"
            app:item_icon="@drawable/trash"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:background="@android:color/darker_gray" />

        <com.alexandr7035.txnotes.views.NavigationMenuItem
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:item_text="@string/menu_about_app"
            app:item_icon="@drawable/about"/>


    </LinearLayout>



</LinearLayout>

</ScrollView>