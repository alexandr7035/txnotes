<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigationMenuItemHeight"
    android:layout_marginBottom="@dimen/navigationMenuSpaceBetweenItems"
    android:background="@drawable/background_navigation_menu_item"
    android:orientation="horizontal">

    <!-- Square -->
    <ImageView
        android:id="@+id/image"
        android:layout_width="@dimen/navigationMenuItemHeight"
        android:layout_height="match_parent"
        android:padding="5dp"
        android:duplicateParentState="true">

    </ImageView>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center|left"
        android:paddingLeft="5dp"
        android:textSize="@dimen/navigationMenuItemTextSize"
        android:duplicateParentState="true"/>


</LinearLayout>