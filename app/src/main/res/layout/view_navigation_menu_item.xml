<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigationMenuItemHeight"
    android:layout_marginBottom="@dimen/navigationMenuSpaceBetweenItems"
    android:background="@drawable/background_navigation_menu_item"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true">

    <!-- Square -->
    <ImageView
        android:layout_width="@dimen/navigationMenuItemHeight"
        android:layout_height="match_parent">

    </ImageView>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/navigationMenuItemTextSize"
        android:gravity="center|left" />


</LinearLayout>