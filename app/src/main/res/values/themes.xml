<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TXNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="NoteCardStyle">
        <item name="android:background">@drawable/background_note_item</item>
        <item name="android:elevation">@dimen/cardview_default_elevation</item>
    </style>

    <style name="NoteItemTitle">
        <item name="android:textSize">@dimen/note_item_title_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="NoteItemDate">
        <item name="android:textSize">@dimen/note_item_date_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="singleLine">true</item>
    </style>

    <style name="NoteItemText">
        <item name="android:textSize">@dimen/note_item_primary_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">8</item>
        <item name="android:ellipsize">end</item>
    </style>

</resources>