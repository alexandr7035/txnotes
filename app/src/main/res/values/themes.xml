<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TXNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_500</item>
        <item name="colorPrimaryVariant">@color/brown_600</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_500</item>
        <item name="colorSecondaryVariant">@color/brown_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/brown_100</item>

        <item name="colorControlNormal">?attr/colorPrimary</item>
    </style>

    <style name="Toolbar">
        <item name="background">@android:color/transparent</item>
        <item name="titleTextColor">@color/gray_500</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="ToolbarWithBackNav" parent="Toolbar">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="navigationIcon">?attr/actionModeCloseDrawable</item>
        <item name="navigationIconTint">@color/brown_500</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NoteCardStyle">
        <item name="android:background">@drawable/background_note_item</item>
        <item name="android:foreground">@drawable/foreground_note_item</item>
        <item name="android:elevation">@dimen/cardview_default_elevation</item>
    </style>

    <style name="NoteItemTitle">
        <item name="android:textSize">@dimen/note_item_title_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="NoteItemDate">
        <item name="android:textSize">@dimen/note_item_date_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="singleLine">true</item>
    </style>

    <style name="NoteItemText">
        <item name="android:textSize">@dimen/note_item_primary_text</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:maxLines">8</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FloatingActionButtonStyle">
        <item name="android:backgroundTint">@color/brown_500</item>
        <item name="tint">@color/white</item>
    </style>

    <style name="NoteField">
        <item name="android:textSize">@dimen/note_field_text</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:background">@drawable/background_note_field</item>
        <item name="android:paddingStart">@dimen/note_field_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/note_field_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/note_field_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/note_field_padding_vertical</item>
        <item name="android:autoLink">web|email</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="NoteTitle" parent="NoteField">
        <item name="singleLine">true</item>
    </style>

    <style name="NoteEditableField" parent="NoteField">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">start|top</item>
    </style>

</resources>