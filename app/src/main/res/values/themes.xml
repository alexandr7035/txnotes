<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TXNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/brown_500</item>
        <item name="colorPrimaryVariant">@color/brown_400</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/brown_200</item>
        <item name="colorSecondaryVariant">@color/brown_600</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/gray_100</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>

        <item name="colorControlNormal">@color/brown_500</item>
    </style>

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/primary_button_corner_radius</item>
        <item name="android:minHeight">@dimen/primary_button_height</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/primary_button_text_size</item>
        <item name="backgroundTint">?attr/colorControlNormal</item>
    </style>

    <style name="Toolbar">
        <item name="background">@android:color/transparent</item>
        <item name="titleTextColor">@color/gray_500</item>
        <item name="titleTextAppearance">@style/ToolbarTextAppearance</item>
    </style>

    <style name="ToolbarWithBackNav" parent="Toolbar">
        <item name="contentInsetStartWithNavigation">0dp</item>
        <item name="navigationIcon">?attr/actionModeCloseDrawable</item>
        <item name="navigationIconTint">?attr/colorControlNormal</item>
    </style>

    <style name="ToolbarTextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NoteCardStyle">
        <item name="android:background">@drawable/background_note_item</item>
        <item name="android:foreground">@drawable/foreground_note_item</item>
        <item name="android:elevation">@dimen/note_item_elevation</item>
    </style>

    <style name="NoteItemTitle">
        <item name="android:textSize">@dimen/note_item_title_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="NoteItemDate">
        <item name="android:textSize">@dimen/note_item_date_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="singleLine">true</item>
    </style>

    <style name="NoteItemText">
        <item name="android:textSize">@dimen/note_item_primary_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:maxLines">8</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FloatingActionButtonStyle">
        <item name="android:backgroundTint">@color/white</item>
        <item name="tint">?attr/colorPrimary</item>
        <item name="rippleColor">@color/transp_5</item>
    </style>

    <style name="TextSymbolCounterStyle">
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textSize">@dimen/symbol_counter_text_size</item>
    </style>

    <style name="NoteField">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:textSize">@dimen/note_field_text</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:background">@drawable/background_note_field</item>
        <item name="android:paddingStart">@dimen/note_field_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/note_field_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/note_field_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/note_field_padding_vertical</item>
        <item name="android:autoLink">web|email</item>
        <item name="android:linksClickable">true</item>
        <item name="android:maxLength">@integer/max_note_text_length</item>
    </style>

    <style name="NoteTitleField" parent="NoteField">
        <item name="android:lines">3</item>
        <item name="android:gravity">top|start</item>
        <item name="android:maxLength">@integer/max_note_title_length</item>
    </style>

    <style name="NoteEditableField" parent="NoteField">
        <item name="android:inputType">textMultiLine</item>
        <item name="android:gravity">start|top</item>
    </style>

    <style name="NoteTitleStyle">
        <item name="android:textSize">@dimen/note_title_text</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NoteTextStyle">
        <item name="android:textSize">@dimen/note_text</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:autoLink">web|email</item>
        <item name="android:linksClickable">true</item>
    </style>

    <style name="NoteDateStyle">
        <item name="android:textSize">@dimen/note_date</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>

    <style name="DialogTitleStyle">
        <item name="android:textSize">@dimen/note_title_text</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogTextStyle">
        <item name="android:textSize">@dimen/note_text</item>
        <item name="android:textColor">@color/gray_500</item>
    </style>
</resources>