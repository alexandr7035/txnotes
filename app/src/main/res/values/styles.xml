<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColorSecondary">#FFFFFF</item>

        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
        <item name="android:navigationBarColor">@color/colorNavigationBar</item>
        <item name="android:spotShadowAlpha">0.5</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:textColorSecondary">#FFFFFF</item>
        <item name="popupTheme">@style/ToolbarMenu</item>

    </style>

    <style name="ToolbarMenu" parent="Widget.AppCompat.Light.PopupMenu.Overflow" >
        <item name="android:textColorSecondary">#000000</item>
    </style>

    <style name="ActionButtonStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:minWidth">0dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>

</resources>
